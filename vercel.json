{
    "version": 2,
    "builds": [
        { 
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        { 
            "src": "frontend/build/**", 
            "use": "@vercel/static" 
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        }
    ]
} 