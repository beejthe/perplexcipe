{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/main.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
} 